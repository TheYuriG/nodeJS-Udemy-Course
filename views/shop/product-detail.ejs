<body>
  <%- include('../includes/navigation.ejs') %>
  <main class="centered">
    <h1>
      <%= product.title %>
    </h1>
    <hr>
    <div>
      <img src="/<%= product.imagePath %>" alt="<%= product.title %>">
    </div>
    <h2>
      R$ <%= product.price %>
    </h2>
    <p>
      <%= product.description %>
    </p>
    <% if (isAuthenticated) { %>
    <%- include('../includes/carterino.ejs', {product: product}) %>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>