<main>
	{{#if hasProdos}}
		<div class='grid'>
    {{#each leProdo}}
		<article class='card product-item'>
			<header class='card__header'>
			<h1 class='product__title'>{{this.title}}</h1>
			</header>
			<div class='card__image'><img class="product__image" src='https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png' alt='Book 1' />
			</div>
			<div class='card__content'>
				<h2 class='product__price'>R$ 19,99</h2>
				<p class='product__description'>A book that has things written in it</p>
			</div>
			<div class='card__actions'>
				<button class='btn'>Add to card</button></div>
		</article>
	</div>
{{/each}}
{{else}}
	<h2>Bruv any books?</h2>
{{/if}}
</main>