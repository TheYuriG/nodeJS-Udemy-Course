<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/authenticate.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if (passwordResetError != undefined) { %>
    <div class="user-message user-message--error"><%= passwordResetError %></div>
    <% } else if (success != undefined) { %>
    <div class="user-message user-message--success"><%= success %></div>
    <% } %>
    <form class="login-form" action="/send-me-new-password" method="POST">
      <div class="form-control">
        <label for="email">Email</label>
        <input type="email" name="email" id="email">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      </div>
      <button class="btn" type="submit">Reset Password
      </button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>