<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/authenticate.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if (authenticateErrorEmail != undefined) { %>
    <div class="user-message user-message--error"><%= authenticateErrorEmail %></div>
    <% }  %>
    <% if (authenticateErrorPassword != undefined) { %>
    <div class="user-message user-message--error"><%= authenticateErrorPassword %></div>
    <% }  %>
    <% if (success != undefined) { %>
    <div class="user-message user-message--success"><%= success %></div>
    <% } %>
    <form class="login-form" action="/login-attempt" method="POST">
      <div class="form-control">
        <label for="email">Email</label>
        <input class="<%= authenticateErrorEmail ? 'invalid' : '' %>" type="email" name="email" value="<%= data.email %>" id="email">
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input class="<%= authenticateErrorPassword ? 'invalid' : '' %>" type="password" name="password" value="<%= data.password %>" id="password">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      </div>
      <button class="btn" type="submit">Login
      </button>
    </form>
    <div class="centered">
      <a href="/forgot-password">Reset Password</a>
    </div>
  </main>
  <%- include('../includes/end.ejs') %>