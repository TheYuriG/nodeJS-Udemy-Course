<%- include('../includes/head.ejs') %>

	<body>
		<%- include('../includes/top-bar.ejs') %>

			<main>
				<form class="product-form" action="/admin/add-product" method="POST">
					<div class="form-control">
						<label for="title">Title</label><input type="text" name="title" id="title" />
					</div>
					<!-- label for doesn't seem to do anything, input type defines what data can be used in this form, name is what is passed on the request body and ID is used to identify this specific element with #id, in case there is a need to specifically edit this element in the DOM -->
					<div class="form-control">
						<label for="imageUrl">Image URL</label><input type="text" name="imageUrl" id="image_URL" />
					</div>
					<div class="form-control">
						<label for="description">Description</label><textarea name="description" id="description"
							rows="3"></textarea>
					</div>
					<div class="form-control">
						<label for="price">Price</label><input type="number" name="price" id="price" step="0.01" />
					</div>
					<button type="submit">Add Product</button>
				</form>
			</main>
			<%- include('../includes/footer.ejs') %>